{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist/public" } },
    { "src": "api/serverless.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/serverless.ts" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}